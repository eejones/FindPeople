%div.awesome
  = form_for (@member) do |m|
    = m.label :username
    = m.text_field :username
    = m.label "Email"
    = m.text_field :email
    = m.label "Password"
    = m.password_field :password
    = m.label "Password Confirmation"
    = m.password_field :password_confirmation
    = m.label "Theme"
    = m.select :mytheme, [['Classic','Classic'], ['Black','Black'], ['Blue','Blue'], ['Yellow','Yellow'], ['Red','Red']]
    = m.label :address
    = m.text_field :address
    = m.label "Avatar"
    = image_tag @member.avatar.url(:thumb)
    = m.file_field :avatar
    %div#specialbutton.highlights
      %h1 Interests
      = m.label "Actor"
      = m.check_box :act
      = m.label "Producer"
      = m.check_box :produce
      = m.label "Director"
      = m.check_box :direct
      = m.label "Extra"
      = m.check_box :extra
      = m.label "Cameraman"
      = m.check_box :camera
      = m.label "Writer"
      = m.check_box :write
      = m.label "PA"
      = m.check_box :pa
      = m.label "Sound guy"
      = m.check_box :sound
      = m.label "Wardrobe"
      = m.check_box :wardrobe
      = m.label "Set Design"
      = m.check_box :setdesign
      = m.label "Stuntman"
      = m.check_box :stunt
      = m.label "Marketing"
      = m.check_box :marketing
      = m.label "Other"
      = m.check_box :other
      = m.label "Explain"
      = m.text_field :what
      = m.label "Only include paid jobs?"
      = m.check_box :paid
      = m.label "Salary"
      = m.number_field :salary
      = m.label "Selected Credits"
      = m.text_area :credits
      = m.label :profilevid
      = m.text_field :profilevid

    %div.rvidstyle
      %h2 Body of work videos
      Total videos:
      %div#resumevids_count
        = @member.resumevids.count
      %div#resumevids_load
        %ul= render :partial => @member.resumevids, :locals => { :list => true }
    = m.submit "Save changes", class: "btn btn-large btn-primary"
