.showmember
  - provide(:title, @member.username)
  %head
  %div{:class=>"row"}
    %aside.span4
      %section
        %div.betterheading
          %h1
            %img{:src=>@member.avatar.url(:thumb), :width=>"32",:height=>"32"}
            = @member.username
  %p{:id=>"notice"}
    = notice
  %table.erictable
    %tr
      %th Username:
      %th Email:
      %th Theme:
    %COLGROUP
      %COL{:width=>"200"}
      %COL{:width=>"300"}
      %COL{:width=>"120"}
    %tr
      %td= @member.username
      %td= @member.email
      %td= @member.mytheme
  - if ingroups?(@member)
    Groups:
    = @member.groups
    = @member.groupings
    - @member.groupings.each do |grouping|
      = group.id
  %div.form-inline
    %br
    %div.betterheading
      %h3 Attributes
    %div.betterlisting
      = render 'display'
  %br
  %div.rvidstyle
    %h2 Body of work videos
    Total videos:
    %span#resumevids_count
      = @member.resumevids.count
    %br
    %br
    %div#resumevids_test
      %ul= render :partial => @member.resumevids, :locals => { :list => true }
    %br
    - if current_member?(@member)
      %h3 Add a video to your body of work
      %div#newcreated
        = render "resumevids/form"
  .memberlinks
    = link_to 'Edit', edit_member_path(@member)
    = link_to 'Back', members_path
