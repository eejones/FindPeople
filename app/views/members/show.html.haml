- provide(:title, @member.username)
%head

%div{:class=>"row"}
  %aside.span4
    %section
      %div.betterheading
        %h1
          = @member.username
            
          %img{:src=>@member.avatar.url(:thumb), :width=>"32",:height=>"32"}
%p{:id=>"notice"}
  = notice
%table.erictable
  %tr
    %th Username:
    %th Email:
  %COLGROUP
    %COL{:width=>"200"}
    %COL{:width=>"300"}
  %tr
    %td= @member.username
    %td= @member.email

%div.form-inline
  %br
  %div.betterheading
    %h3 Attributes
  = form_for (@member) do |m|
    = m.label "Act:"
    = @member.act
    |    
    = m.label "Produce:"
    = @member.produce
    |    
    = m.label "Direct:"
    = @member.direct
    |    
    = m.label "Camera:"
    = @member.camera
    |     
    = m.label "Extra:"
    = @member.extra
    |    
    = m.label "Pa:"
    = @member.pa
    |   
    = m.label "Write:"
    = @member.write
    |   
    = m.label "Sound:"
    = @member.sound
    %br
    = m.label "Wardrobe:"
    = @member.wardrobe
    |   
    = m.label "Setdesign:"
    = @member.setdesign
    |   
    = m.label "Stunt:"
    = @member.stunt
    |   
    = m.label "Marketing:"
    = @member.marketing
    |   
    = m.label "Other:"
    = @member.other
    |   
    = m.label "What:"
    = @member.what
    |   
    = m.label "Paid:"
    = @member.paid
    |   
    = m.label "Salary:"
    = @member.salary
    %br
    = m.label "Credits:"
    = @member.credits
    %br
    = m.label "Address:"
    = @member.address
    %br
    = m.label "Latitude:"
    = @member.latitude
    %br
    = m.label "Longitude:"
    = @member.longitude
    %br
    = m.label "Other Users Near You:"
    %ul
      -unless @member.nearbys(100).nil?
        = render @member.nearbys(100)
    %br
    = image_tag "http://www.mapquestapi.com/staticmap/v4/getmap?key=Fmjtd%7Cluub2duynh%2C2l%3Do5-9u2s1u&center=#{@member.latitude},#{@member.longitude}&zoom=5&size=400,200&type=map&imagetype=jpeg&pois=1,#{@member.latitude},#{@member.longitude},-20,-20|orange-100,#{@member.latitude},#{@member.longitude}|green,#{@member.latitude},#{@member.longitude}|yellow-s,#{@member.latitude},#{@member.longitude}"
    %br

    = link_to 'Edit Profile', edit_member_path(@member)

%div.rvidstyle
  %h2 Body of work videos
  Total videos:
  %div#resumevids_count
    = @member.resumevids.count
  %div#resumevids_test
    %ul= render :partial => @member.resumevids, :locals => { :list => true }
  %br
  %h3 Add a video to your body of work
  %div#newcreated
    = render "resumevids/form"
%br/
= link_to 'Edit', edit_member_path(@member)
= link_to 'Back', members_path
